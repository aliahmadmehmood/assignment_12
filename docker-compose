version: '3.8'

services:
  db:
    image: mariadb:10.5
    restart: always
    container_name: mariadb
    environment:
      MYSQL_ROOT_PASSWORD: 123
      MYSQL_DATABASE: flask_db
      MYSQL_USER: username
      MYSQL_PASSWORD: password
    volumes:
      - db_data:/var/lib/mysql
    networks:
      - backend
    healthcheck:
      test: ["CMD", "mysqladmin", "ping", "-h", "localhost", "-u", "root", "-p123"]
      interval: 10s
      timeout: 5s
      retries: 5

  web:
    build: .
    restart: always
    depends_on:
      db:
        condition: service_healthy
    expose:
      - "5000:5000"
    environment:
      - FLASK_ENV=production
      - FLASK_APP=wsgi.py
      - DATABASE_URL=mysql+pymysql://username:password@db:3306/flask_db
      - DATABASE_HOST=db
      - DATABASE_PORT=3306
      - DATABASE_USER=username
      - DATABASE_PASSWORD=password
      - DATABASE_DB=flask_db
    networks:
      - backend
    command: sh -c "sleep 10 && gunicorn --bind 0.0.0.0:5000 -w 4 --timeout 90 wsgi:app"

  nginx:
    build:
      context: ./nginx
      dockerfile: Dockerfile.nginx
    restart: always
    ports:
      - "80:80"
      - "443:443"
    depends_on:
      - web
    networks:
      - backend
    volumes:
      #- /etc/letsencrypt:/etc/letsencrypt
      #- /var/lib/letsencrypt:/var/lib/letsencrypt
      - /etc/letsencrypt/live/docker.aliahmad.sumamazaeem.com:/etc/letsencrypt/live/docker.aliahmad.sumamazaeem.com:ro
      - /etc/letsencrypt/archive/docker.aliahmad.sumamazaeem.com:/etc/letsencrypt/archive/docker.aliahmad.sumamazaeem.com:ro
    command: "/bin/sh -c 'while :; do sleep 6h & wait $${!}; nginx -s reload; done & nginx -g \"daemon off;\"'"

networks:
  backend:

volumes:
  db_data:
